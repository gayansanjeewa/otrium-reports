{% extends "base.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <div class="wrapper">

        <div class="col-sm-12 col-sm-offset-6 mt-5">
            <span class="show-alert"></span>

            <h1>Otrium Reports</h1>
            <p class="lead">Using this interface you'd be able to generate following reports</p>
            <ol>
                <li class="turnover-per-brand-report">
                    7 days turnover per brand (Brand Name, Total turnover(excluding VAT) per day for last 7 days).
                </li>
                <li class="turnover-per-day-report">
                    7 days turnover per day. (Day, total turnover(excluding VAT) per day).
                </li>
            </ol>

            <p class="lead"> Please select a start date to proceed </p>

            <form method="POST">
                <div id="date-group" class="form-group">
                    <label for="startDate">Start Date:</label>
                    <input
                            type="date"
                            class="form-control"
                            id="startDate"
                            name="startDate"
                    />
                    <small>(Psst! For this example please select 01-05-2018 so the report would generated for period of
                        01-05-2018 - 07-05-2018)</small>
                </div>

                <input type="hidden" name="token" id="token" value="{{ csrf_token }}">

                <button type="submit" class="btn btn-success">
                    Submit
                </button>
            </form>


        </div>

    </div>

{% endblock %}

{% block javascript %}
{{ parent() }}

<script src="./assets/js/form.js"></script>

{% endblock %}